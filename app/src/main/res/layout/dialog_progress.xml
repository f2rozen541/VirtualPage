<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_uniform_dialog"
    android:paddingLeft="30px"
    android:paddingRight="30px">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:gravity="center_vertical"
        android:text="@string/Merging"
        android:textColor="@color/Dialog_Title"
        android:textSize="@dimen/dialog_title_text_size"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120px">

        <com.hanvon.virtualpage.notecomponent.view.MagicProgressBar
            android:id="@+id/mpb_progress"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_gravity="center_vertical"
            app:mpb_background_color="@color/Dialog_Progress_Bg"
            app:mpb_fill_color="@color/Dialog_Progress_Fill">

        </com.hanvon.virtualpage.notecomponent.view.MagicProgressBar>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bottom_height"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:text="@string/Stop"
            android:textColor="@color/Dialog_Confirm"
            android:textSize="@dimen/dialog_bottom_text_size" />
    </LinearLayout>

</LinearLayout>