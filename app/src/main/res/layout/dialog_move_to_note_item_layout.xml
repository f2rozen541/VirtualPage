<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_note_item_container"
    android:layout_width="wrap_content"
    android:layout_height="528px"
    android:background="@drawable/note_cover3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        android:layout_marginTop="100px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_note_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:text="@string/DefaultDate"
            android:textColor="@color/colorTextWhite"
            android:textSize="18px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_disable_cover"
        android:layout_width="334px"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:alpha="0.6"
        android:visibility="gone" />
</FrameLayout>

