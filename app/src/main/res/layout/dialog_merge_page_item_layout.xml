<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hanvon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="518px">

    <ImageView
        android:id="@+id/iv_page"
        android:layout_width="match_parent"
        android:layout_height="518px"
        android:background="@drawable/page_bg_repeat_default"
        android:scaleType="fitCenter"
        android:src="@drawable/page" />

    <FrameLayout
        android:id="@+id/fl_disable_flag"
        android:layout_width="match_parent"
        android:layout_height="518px"
        android:background="@color/ColorTranslucent">

    </FrameLayout>

    <com.hanvon.virtualpage.pageeditor.view.AutoBgButton
        android:id="@+id/abb_check_flag"
        android:layout_width="58px"
        android:layout_height="58px"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        hanvon:SelectedBgRes="@drawable/ic_merge_page_selected"
        hanvon:UnSelectedBgRes="@android:color/transparent" />


</RelativeLayout>