<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="720px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="17dp"
            android:gravity="center_vertical"
            android:text="@string/ChangeBackground"
            android:textColor="@color/Dialog_Title"
            android:textSize="32px"
            android:textStyle="bold" />


        <GridView
            android:id="@+id/gv_bg_selector"
            android:layout_width="546px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="64px"
            android:layout_marginTop="64px"
            android:columnWidth="126px"
            android:gravity="center"
            android:horizontalSpacing="84px"
            android:numColumns="3"
            android:stretchMode="none"
            android:verticalSpacing="64px">

        </GridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginRight="17dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="44dp"
                android:text="@string/Cancel"
                android:textAllCaps="false"
                android:textColor="@color/Dialog_Cancel"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/Apply"
                android:textAllCaps="false"
                android:textColor="@color/Dialog_Confirm"
                android:textSize="30px" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>