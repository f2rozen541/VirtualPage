<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="382px"
              android:background="@android:color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:layout_marginStart="30px"
        android:gravity="center_vertical"
        android:text="@string/add_picture"/>

    <LinearLayout
        android:id="@+id/ll_take_photo"
        android:layout_width="724px"
        android:layout_height="wrap_content"
        android:layout_marginStart="30px"
        android:layout_marginTop="38px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="88px"
            android:layout_height="88px"
            android:src="@drawable/take_photo"/>

        <TextView
            android:id="@+id/tv_take_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="34px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/take_photo"
            android:textColor="@color/editorDialogEditText"
            android:textSize="26px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chose_image"
        android:layout_width="724px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38px"
        android:layout_marginStart="30px"
        android:layout_marginTop="42px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="88px"
            android:layout_height="88px"
            android:src="@drawable/chose_picture"/>

        <TextView
            android:id="@+id/tv_choose_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="34px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/choose_image"
            android:textColor="@color/editorDialogEditText"
            android:textSize="26px"/>
    </LinearLayout>

</LinearLayout>