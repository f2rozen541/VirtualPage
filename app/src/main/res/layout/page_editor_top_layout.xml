<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hanvon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/PageEditorToolBarBg"
    android:alpha="0.95"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <Button
        android:id="@+id/previewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERATE"
        android:layout_marginLeft="14dp"/>

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/back"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/ib_note_new_note"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/new_note_1"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/ll_editor_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.hanvon.virtualpage.pageeditor.view.AutoBgButton
            android:id="@+id/ib_paint"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_toolbar_pen_selector"
            hanvon:SelectedBgRes="@drawable/ic_toolbar_pen_select"
            hanvon:UnSelectedBgRes="@drawable/ic_toolbar_pen" />

        <com.hanvon.virtualpage.pageeditor.view.AutoBgButton
            android:id="@+id/ib_text"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/btn_toolbar_text_selector"
            hanvon:SelectedBgRes="@drawable/ic_toolbar_text_select"
            hanvon:UnSelectedBgRes="@drawable/ic_toolbar_text" />

        <ImageButton
            android:id="@+id/ib_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/ic_toolbar_photo" />

        <ImageButton
            android:id="@+id/ib_rotate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/ic_toolbar_rotate" />

        <com.hanvon.virtualpage.pageeditor.view.AutoBgButton
            android:id="@+id/ib_frame"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/btn_toolbar_frame_selector"
            hanvon:SelectedBgRes="@drawable/ic_toolbar_frame_select"
            hanvon:UnSelectedBgRes="@drawable/ic_toolbar_frame" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line" />

        <ImageButton
            android:id="@+id/ib_last"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/btn_page_editor_undo_selector" />

        <ImageButton
            android:id="@+id/ib_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/btn_page_editor_redo_selector" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_share"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/share" />

    <ImageButton
        android:id="@+id/ib_note_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_page_editor_setting_selector" />
</LinearLayout>